<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myscreen_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFF"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="app.calcounterapplication.com.myapplication.MainActivity"
    tools:showIn="@layout/activity_main">

    <ImageView
        android:id="@+id/baloons_imag"
        android:layout_width="195dp"
        android:layout_height="255dp"
        android:scaleType="fitXY"
        android:src="@drawable/baloons2" />

    <ImageView
        android:id="@+id/company_icon"
        android:layout_width="195dp"
        android:layout_height="255dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/baloons_imag"
        android:layout_toRightOf="@+id/baloons_imag"
        android:src="@drawable/compan_icon"
        tools:layout_editor_absoluteX="200dp"
        tools:layout_editor_absoluteY="0dp" />


    <ImageView
        android:id="@+id/wish_pic"
        android:layout_width="195dp"
        android:layout_height="255dp"
        android:layout_below="@id/baloons_imag"
        android:scaleType="fitXY"
        android:src="@drawable/wish_pic" />

    <ImageView
        android:id="@+id/changing_pic"
        android:layout_width="185dp"
        android:layout_height="255dp"
        android:layout_marginTop="255dp"
        android:layout_toEndOf="@+id/wish_pic"
        android:layout_toRightOf="@+id/wish_pic"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/disapear_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="370dp"
        android:layout_toEndOf="@+id/wish_pic"
        android:layout_toRightOf="@+id/wish_pic"
        android:text="לחץ כאן להכנסת תמונה"
        android:visibility="visible" />


</RelativeLayout>
